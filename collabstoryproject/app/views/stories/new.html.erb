

			<%= form_for(@story, :url => {:controller => "stories", :action => "create"}) do |f| %>
			  	<%=f.text_field :title, id: "title_field", value: "Title Here"%>
			  	<%=f.text_field :summary, id: "summary_field", value: "Summary Here" %> 		
	  			<%=f.text_field :genre, id: "genre_field", value: "Genre Here" %>
	  			<%=f.hidden_field :user_id, :value => session[:id] %>
	  			<br><%=f.submit "Save", id: "submit_new_story" %>
	  		<% end %>

	  		<div class="small_spacer"></div>
	  		<div id="truth_container"> Add truth nodes to your story. The order in which you list them is the order they will appear in the story. 
	  			<div class="small_spacer"></div>
			</div>
				<button onclick="add_tn_form()">Add Truth Node </button>

		<script>
			function add_tn_form() {
				var el = document.getElementById("truth_container");
				el.innerHTML = el.innerHTML + '<textarea class="truth_input">write a truth scene...</textarea><div class="small_spacer"></div>'
			}

		</script>